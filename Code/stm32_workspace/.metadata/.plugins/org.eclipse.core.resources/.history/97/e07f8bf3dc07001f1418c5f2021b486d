/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
   if (huart->Instance == USART2) { // Current UART
	   rcv_buf[rcv_buf_idx][rcv_idx] = rcv_byte;    // Add data to Rx_Buffer
	   if ((rcv_byte == '\n' || rcv_byte == '\r')) {
		   // if a \r or \n already handled, ignore the next one until new characters received
		   if (rcv_idx > 0) {
			   rcv_cmd_len = rcv_idx;
			   osEventFlagsSet(eventCMDHandle, rcv_buf_idx + 1);
			   rcv_buf_idx = (int)(!rcv_buf_idx);
			   rcv_idx = 0;
		   }
	   } else {
		   rcv_idx++;
		   if (rcv_idx >= MAX_CMD_LEN) {
			   rcv_idx = MAX_CMD_LEN;
			   //TODO, should report error
		   }
	   }
   }

   HAL_UART_Receive_IT(&huart2, &rcv_byte, 1);
}

void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
	if (htim->Instance == TIM6) {
		HAL_DAC_SetValue(&hdac1, DAC_CHANNEL_1, DAC_ALIGN_12B_R, dac0_value);
		HAL_DAC_SetValue(&hdac1, DAC_CHANNEL_2, DAC_ALIGN_12B_R, dac1_value);
		HAL_DAC_SetValue(&hdac2, DAC_CHANNEL_1, DAC_ALIGN_12B_R, dac2_value);
	}
}
/* USER CODE END 4 */

/* USER CODE BEGIN Header_StartDefaultTask */
/**
  * @brief  Function implementing the defaultTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void *argument)
{
  /* USER CODE BEGIN 5 */
  /* Infinite loop */
  for(;;)
  {


	  osDelay(10);
  }
  /* USER CODE END 5 */
}

/* USER CODE BEGIN Header_StartTaskCMD */
/**
* @brief Function implementing the taskCMD thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StartTaskCMD */
void StartTaskCMD(void *argument)
{
  /* USER CODE BEGIN StartTaskCMD */
  /* Infinite loop */
  for(;;) {
	  HAL_UART_Receive_IT(&huart2, &rcv_byte, 1);
		uint8_t cmd_buf[MAX_CMD_LEN];
		uint32_t flags;
		for(;;) {
			flags = osEventFlagsWait(eventCMDHandle, FLAG_CMD_BUF0_READY | FLAG_CMD_BUF1_READY, osFlagsWaitAny, 100);
			if (flags < 0x80000000) {
				memcpy((char*)cmd_buf, (const char*)rcv_buf[flags-1], rcv_cmd_len);
				cmd_buf[rcv_cmd_len] = '\0';
				if (strncmp((const char *)cmd_buf, "acq", 3) == 0) {
					debug_print_uart("acq cmd received\r\n");
					send_command_response("acq: OK\r\n");
					osEventFlagsSet(eventAppHandle, FLAG_APP_START_ACQ);
				} else if (strncmp((const char *)cmd_buf, "stop", 4) == 0) {
					debug_print_uart("stop cmd received\r\n");
					osEventFlagsSet(eventAppHandle, FLAG_APP_STOP_ACQ);
				} else if (strncmp((const char *)cmd_buf, "init", 4) == 0) {
					debug_print_uart("init cmd received\r\n");
					init_memory(0x1, 0x1);
					osEventFlagsSet(eventAppHandle, FLAG_APP_STOP_ACQ);
				} else if (strncmp((const char *)cmd_buf, "settings ", 9) == 0) {
					debug_print_uart("settings cmd received\r\n");
					if (strncmp((const char *)(cmd_buf+9), "save", 4) == 0) {
						debug_print_uart("settings save cmd received\r\n");
						update_system_flash();
					} else if (strncmp((const char *)(cmd_buf+9), "load", 4) == 0) {
						debug_print_uart("settings load cmd received\r\n");
						read_system_flash();
					}
				} else if (strncmp((const char *)cmd_buf, "stream ", 7) == 0) {
					if (strncmp((const char *)(cmd_buf+7), "start", 5) == 0) {
						enable_uart_data_stream = true;
						send_command_response("stream start: OK\r\n");
					} else if (strncmp((const char *)(cmd_buf+7), "stop", 4) == 0) {
						enable_uart_data_stream = false;
						send_command_response("stream stop: OK\r\n");
					} else if (strncmp((const char *)(cmd_buf+7), "file ", 5) == 0) {
						char file_num_str[2];
						strncpy(file_num_str, (const char*)(cmd_buf+12), min(sizeof(file_num_str), rcv_cmd_len - 12));
						uint16_t file_num = atoi(file_num_str);
						if (stream_file(file_num)) {
							send_command_response("stream file: %d,%d,%d\r\n", file_num, file_read_start, file_read_stop);
						} else {
							send_command_response("stream file: %d,0,0,Bad File\r\n", file_num);
						}
					}
				} else if (strncmp((const char *)cmd_buf, "vdrive", 6) == 0) {
					if (rcv_cmd_len == 6) {
						send_command_response("vdrive:%d\r\n", get_vdrive());
					} else {
						char width_str[5];
						strncpy(width_str, (const char*)(cmd_buf+7), min(sizeof(width_str), rcv_cmd_len - 6));
						uint16_t width = atoi(width_str);
						update_vdrive(width);
					}
				} else if (strncmp((const char *)cmd_buf, "kgf_slope", 9) == 0) {
					if (rcv_cmd_len == 9) {
						send_command_response("kgf_slope:%d\r\n", (int)(system_settings.kgf_slope*system_settings.kgf_param_scale));
					} else {
						char slope_str[10];
						strncpy(slope_str, (const char*)(cmd_buf+10), min(sizeof(slope_str), rcv_cmd_len - 9));
						float slope= (float)(atoi(slope_str)) / (float)(system_settings.kgf_param_scale);
						system_settings.kgf_slope = slope;
					}
				} else if (strncmp((const char *)cmd_buf, "kgf_offset", 10) == 0) {
					if (rcv_cmd_len == 10) {
						send_command_response("kgf_offset:%d\r\n", (int)(system_settings.kgf_offset*system_settings.kgf_param_scale));
					} else {
						char offset_str[10];
						strncpy(offset_str, (const char*)(cmd_buf+11), min(sizeof(offset_str), rcv_cmd_len - 10));
						float offset= (float)(atoi(offset_str)) / (float)(system_settings.kgf_param_scale);
						system_settings.kgf_offset = offset;
					}
				} else if (strncmp((const char *)cmd_buf, "rate", 4) == 0) {
					if (rcv_cmd_len == 4) {
						send_command_response("rate:%f\r\n", system_settings.sampling_rate_ms);
					} else {
						char rate_str[4];
						strncpy(rate_str, (const char*)(cmd_buf+5), min(sizeof(rate_str), rcv_cmd_len - 4));
						uint16_t rate= atoi(rate_str);
						system_settings.sampling_rate_ms = rate;
					}
				} else {
					debug_print_uart("Unknown cmd {%s}\r\n", cmd_buf);
				}
				rcv_cmd_len = 0;
			} else {
				if (flags == osFlagsErrorTimeout) {
					// normal, no need to do anything
				} else {
					//TODO: another error occurred, should probably do something
				}
			}
		}
	}
  /* USER CODE END StartTaskCMD */
}

/**
  * @brief  This function is executed in case of error occurrence.
  * @retval None
  */
void Error_Handler(void)
{
  /* USER CODE BEGIN Error_Handler_Debug */
  /* User can add his own implementation to report the HAL error return state */
  __disable_irq();
  while (1)
  {
  }
  /* USER CODE END Error_Handler_Debug */
}

